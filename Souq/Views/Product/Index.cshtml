@model ProductVM
<div class="col-lg-6">
            <form asp-action="Create" asp-controller="Product" method="post" class="myform">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="row">
                <div class="col-md-6 form-group">
                
                    <input type="text" name="Name" class="form-control" id="CatName" placeholder="CatName">
                <span asp-validation-for="CatName" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                <input type="text" class="form-control" name="Email" id="ProductName" placeholder="ProductName">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
                </div>
              <div class="form-group mt-3">
            <input type="text" class="form-control" name="ProductPrice" id="ProductPrice" placeholder="Subject" >
              </div>
              <div class="form-group mt-3">
            <textarea class="form-control" id="ProductQty" Name="ProductQty" row="5" placeholder="Description"></textarea>
              </div>
            
              <div class="text-center"><input type="submit" class="btn btn-primary" Value="Send Message" />
              </div>
           @Html.DropDownList("Id",(SelectList) ViewBag.catList,"Select Category")  
         
       </form>
       </div>