@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Souq.Models.Product  // دى الصفحه اللى عاوزها تظهر ف اى مكان

<div class="col-lg-3 col-md-6 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
    <div class="box featured">
        <h3>@Model.Name</h3>
        <h4><sup>$</sup>@Model.Price<span></span></h4>
        <img src="https://localhost:44332/upload/@Model.Photo" width="200" height="200">

        <div class="btn-wrap">
            <a href="/Home/CurrentProduct/@Model.Id" class="btn-buy">Details</a>
        </div>
    </div>
   
    <div>
        <a asp-controller="Products" asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a> |
        <a asp-controller="Products" asp-action="Details" class="btn btn-secondary" asp-route-id="@Model.Id">Details</a> |
        <a asp-controller="Products" asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.Id">Delete</a>
    </div>
</div>