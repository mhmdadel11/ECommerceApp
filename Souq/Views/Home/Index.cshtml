@model Souq.Models.indexVm
 @* زرار البحث *@

  <div class="container mt-5 mb-5">  @* ده عشان ياخد مسافه م اليمين و الشمال  *@
   
        <form asp-action="productSearch" asp-controller="Home" method="get">
              <div class="row">
            <input type="submit" class="col-sm-2 btn btn-primary" value="Search" right/>
